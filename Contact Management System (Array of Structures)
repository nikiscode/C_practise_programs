#include <stdio.h>
#include <string.h>

struct Contact {
    char name[50];
    char phone[15];
};

int main() {
    struct Contact contacts[100];
    int count = 0, choice, i;

    do {
        printf("\n1.Add Contact\n2.Display Contacts\n3.Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("Enter Name: ");
                scanf("%s", contacts[count].name);
                printf("Enter Phone: ");
                scanf("%s", contacts[count].phone);
                count++;
                break;

            case 2:
                for(i = 0; i < count; i++) {
                    printf("%d. %s - %s\n", i+1, contacts[i].name, contacts[i].phone);
                }
                break;

            case 3:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid Choice!\n");
        }

    } while(choice != 3);

    return 0;
}
